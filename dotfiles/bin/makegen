#!/bin/sh

# Create useful Makefiles
# Usage:
# param is a comma separated list of ignore profiles.
# If param is ommited choose interactively.
TEMPLATES=${TEMPLATES}/Makefiles

IFS+=","
for item in $(ls $TEMPLATES); do
    echo $item
done | fzf --multi --ansi | paste -s -d "," - |
{ read result && cat "${TEMPLATES}/$result"; } > Makefile
