# Aliases
# Real commands
alias grep="grep --color=auto"
alias ll="ls -al"
alias ls="ls --color=always --classify --group-directories-first --human-readable"
alias less="less -F"
# Folders
alias localhost="/srv/http/"
alias cdw="~/Workspace/"
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'

# Protections
alias mv='mv -i'
alias cp='cp -i'

# Trash
alias rm='trash-put '
alias restore='trash-restore'

# Tools
alias youtube='youtube-dl --extract-audio --audio-format mp3'
alias swapvoid="swapoff -a && swapon -a"
alias clip="xclip -selection c"

#tmux
alias tma="tmux attach"
alias tls="tmux list-session"

# One char
alias g="git"
alias e="exit"
alias c="clear"
alias k="kubectl"

# Functions
alias sc="scratch"

# Containers
# alias kapitan="docker run -t --rm -u $(id -u) -v $(pwd):/src:delegated deepmind/kapitan"

# Correction
alias nano="nvim"
alias vim="nvim"

# Fasd
# https://github.com/clvbv/fasd
alias a='fasd -a'        # any
alias s='fasd -si'       # show / search / select
alias d='fasd -d'        # directory
alias f='fasd -f'        # file
alias sd='fasd -sid'     # interactive directory selection
alias sf='fasd -sif'     # interactive file selection
alias z='fasd_cd -d'     # cd, same functionality as j in autojump
alias zz='fasd_cd -d -i' # cd with interactive selection
alias v='f -e nvim' # quick opening files with vim
alias m='f -e mplayer' # quick opening files with mplayer
alias o='a -e xdg-open' # quick opening files with xdg-open
