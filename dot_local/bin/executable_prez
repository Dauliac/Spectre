#!/usr/bin/bash

helpmenu() {
    echo "prez [param [options]] \n
    -t | --users <text>    : displayed users \n
    -t | --topic <text>     : prez topic"
}

while [ ! $# -eq 0 ]
do
    case "$1" in
        --users | -u)
            PREZ_USERS=$2
            sed -i -e 's/PREZ_USERS=.*/PREZ_USERS="'"$PREZ_USERS"'"/g' $HOME/.config/polybar/prez.sh
            ;;
        --topic | -t)
            PREZ_TOPIC=$2
            sed -i -e 's/PREZ_TOPIC=.*/PREZ_TOPIC="'"$PREZ_TOPIC"'"/g' $HOME/.config/polybar/prez.sh
            ;;
        --help | -h)
            helpmenu
            exit
            ;;
   esac
   shift
done
xrandr --output DP2 --auto --right-of eDP1
echo "ON air !"
polybar -qr two > /dev/null
pkill polybar
echo "That's all folks !"
