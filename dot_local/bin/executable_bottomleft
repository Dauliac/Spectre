#!/bin/bash

# This script move the selected window to the bottom left of the screen.

current=$(xdotool getwindowfocus)

# The window will take up no more than a third of
# the width or height of the screen.
newwidth=$(($(xdotool getdisplaygeometry | awk '{print $2}') / 4))
newheight=$(($(xdotool getdisplaygeometry | awk '{print $1}') / 4))

xdotool windowsize $(xdotool getwindowfocus) $newheight $newwidth

newsize=$(xdotool getwindowgeometry $(xdotool getwindowfocus) | grep Geometry | sed -e 's/x/ /g' )
newsizeheight=$( echo $newsize | awk '{print $3}')
newsizewidth=$(echo $newsize | awk '{print $2}')

height=$(($(xdotool getdisplaygeometry | awk '{print $2}') - newsizeheight - 2))
width=$(($(xdotool getdisplaygeometry | awk '{print $1}') - newsizewidth - 2))

xdotool windowmove $current $width $height

